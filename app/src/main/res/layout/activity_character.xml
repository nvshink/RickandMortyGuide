<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#CD5D5D"
    android:theme="@style/Theme.RickAndMortyGuide.Body"
    tools:context=".CharacterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:divider="@null"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nameTextView"
            style="@style/Theme.RickAndMortyGuide.TextView.H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:theme="@style/Theme.RickAndMortyGuide.TextView.H1"
            tools:text="Hudson Hornet" />

        <TextView
            android:id="@+id/genderTextView"
            style="@style/Theme.RickAndMortyGuide.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:theme="@style/Theme.RickAndMortyGuide.TextView"
            tools:text="Male" />

        <TextView
            android:id="@+id/speciesTextView"
            style="@style/Theme.RickAndMortyGuide.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:theme="@style/Theme.RickAndMortyGuide.TextView"
            tools:text="Car" />


        <TextView
            android:id="@+id/statusTextView"
            style="@style/Theme.RickAndMortyGuide.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:theme="@style/Theme.RickAndMortyGuide.TextView"
            tools:text="Dead" />

        <TextView
            android:id="@+id/locationTextView"
            style="@style/Theme.RickAndMortyGuide.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:theme="@style/Theme.RickAndMortyGuide.TextView"
            tools:text="Radiator Springs" />


        <TextView
            android:id="@+id/episodeTextView"
            style="@style/Theme.RickAndMortyGuide.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:theme="@style/Theme.RickAndMortyGuide.TextView"
            tools:text="Cars" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>